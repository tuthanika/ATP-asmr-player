<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favoritesRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Tiêu đề hoặc toolbar -->
    <TextView
        android:id="@+id/favoritesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách Mix Yêu Thích"
        android:textStyle="bold"
        android:textSize="19sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="14dp"/>

    <!-- Danh sách các FavoriteMixView sẽ được thêm động bằng code -->
    <LinearLayout
        android:id="@+id/mixesListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <!-- Có thể bổ sung nút hoặc thông báo nếu danh sách rỗng -->
    <!-- ... -->

</LinearLayout>