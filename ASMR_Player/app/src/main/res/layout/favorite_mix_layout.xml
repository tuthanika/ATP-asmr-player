<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/list_padding"
    android:paddingEnd="@dimen/list_padding"
    android:gravity="center"
    android:layout_marginBottom="10dp">

    <ImageView
        android:layout_width="@dimen/sound_icon_size"
        android:layout_height="@dimen/sound_icon_size"
        android:src="@drawable/ic_musical_note"
        android:scaleType="fitCenter"
        android:padding="18dp"
        android:background="@drawable/sound_icon_background"
        android:contentDescription="@string/mix_icon_content" />

    <TextView
        android:id="@+id/mixTitleTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"
        android:text="@string/mix_1"
        android:textSize="@dimen/font_size"
        android:textColor="@color/mainColor"
        android:fontFamily="@font/cabin_regular"/>

    <ImageButton
        android:id="@+id/playMixButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ripple"
        android:src="@drawable/ic_play"
        android:scaleType="fitCenter"
        android:padding="16dp"
        android:layout_marginEnd="0dp"
        android:contentDescription="@string/play_button_content" />

    <!-- B? SUNG: Nút xóa mix yêu thích, m?c d?nh ?n, ch? hi?n v?i quy?n ch?nh s?a -->
    <ImageButton
        android:id="@+id/deleteMixButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ripple"
        android:src="@drawable/ic_delete"
        android:scaleType="fitCenter"
        android:padding="8dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/delete_mix_button_content"
        android:visibility="gone" />

    <!-- B? SUNG: Nút d?i tên mix, m?c d?nh ?n, ch? hi?n v?i quy?n ch?nh s?a -->
    <ImageButton
        android:id="@+id/renameMixButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ripple"
        android:src="@drawable/ic_edit"
        android:scaleType="fitCenter"
        android:padding="8dp"
        android:layout_marginStart="6dp"
        android:contentDescription="@string/rename_mix_button_content"
        android:visibility="gone" />

</LinearLayout>