<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Phần giao diện âm thanh gốc (ví dụ) -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASMR Player"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp" />

    <!-- Danh sách âm thanh gốc (ví dụ, bạn có thể thay đổi cho đúng project thực tế) -->
    <LinearLayout
        android:id="@+id/soundsListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp" />

    <!-- Thanh điều chỉnh tổng âm lượng (ví dụ) -->
    <SeekBar
        android:id="@+id/masterVolumeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp" />

    <!-- Các nút điều khiển phát/tạm dừng, mix... (ví dụ) -->
    <LinearLayout
        android:id="@+id/controlButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/buttonPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phát" />

        <Button
            android:id="@+id/buttonPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạm dừng"
            android:layout_marginLeft="12dp" />

        <Button
            android:id="@+id/buttonFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yêu thích"
            android:layout_marginLeft="12dp" />
    </LinearLayout>

    <!-- BỔ SUNG PHẦN ÂM THANH CUSTOM -->
    <TextView
        android:id="@+id/customSoundSectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Âm thanh của bạn"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/customSoundsListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <Button
        android:id="@+id/buttonAddCustomSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm âm thanh"
        android:onClick="onClickAddSound"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

</LinearLayout>